/* pages/control/control.wxss */
.controlWrap{
  width: 95%;
  position: fixed;
  bottom: 30rpx;
  margin-left: 2%;
 
}
.controlMain{
  display: flex;
  justify-content: space-around;
}
.hint{
    width: 100%;
  color: red;
  font-size: 0.8em;
  text-align: center;
  line-height: 1.5em;
  margin: 30rpx 0;
}
.input{
 margin: 0 20rpx;
height: 60rpx;
line-height: 60rpx;
font-size: 40rpx;
color: #fff;
background: #333232;
border-radius: 10rpx;
text-align: center;
padding: 10rpx;

}

.controlContent{
  height: 680rpx;
  width: 100%;
  position: fixed;
  background: #333333b3;
  bottom:0;
  padding-bottom: 10px;
}
.confirm{
  background: #333333b3;
    width: 100rpx;
  height: 80rpx;
  color:#fff;
  line-height: 80rpx;
  text-align: center;
  position: absolute;
  top: -100rpx;
  right: 50rpx;
}
.settingWrap{
  height:130rpx;
  margin-top: 30rpx;
   margin-left:20rpx;
  width: 100%;
  display: block;
}
.settingTitle{
  height: 40rpx;
 
  color: #fff;
  font-size: 36rpx;
  text-align: left;
  display: block;
}
.colorContent{
  padding-top:20rpx;
  height: 80rpx;
  display: block;
  white-space: nowrap;
}
.colorItem{
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
  margin: 0 10rpx;
  border-radius:10%;
}
.bk{
  background: #424141;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  line-height: 80rpx;
}



